@model User

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden/>
    <div class="border mt-5" style="width:100%">
        <div class="row pb-2 m-3">
            <h2 class="text-primary">Delete User</h2>
            <hr />
        </div> 
       @* <div asp-validation-summary="All"></div>*@
        <div class="m-3">
            <label asp-for="Uid"></label>
            <input disabled asp-for="Uid" class="form-control"/>
         </div>
        <div class="m-3">
            <label asp-for="Password"></label>
            <input disabled type="password" asp-for="Password" class="form-control" />
         </div>
        <div class="m-3">
            <label asp-for="UserType"></label>
            <input disabled asp-for="UserType" class="form-control" />
         </div>
        <div class="m-3">
            <label asp-for="Email"></label>
            <input type="email" disabled asp-for="Email" class="form-control" />
           
        </div>
        <button  type="submit" class="btn btn-danger m-3" style ="width:150px">Delete</button>
        <a asp-controller="User" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts {
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}