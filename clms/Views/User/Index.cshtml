@model IEnumerable<User>
@{
    ViewData["Title"] = "Index";
}

<div class="container  p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">User List</h2>
        </div>
        <div class="col-6 text-end">
           <a asp-controller="User" asp-action="Create" class="btn btn-primary">
              <i class="bi bi-plus-circle"></i>&nbsp; Create New User
           </a>         
        </div>
    <br /><br />
    </div>
 <table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <td>
                User name
            </td>
             <td>
                User Type
            </td>
            <td>
                Email
            </td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr> 
                <td width="20%">
                    @obj.Uid
                </td>
                <td width="30%">
                    @obj.UserType
                </td>
                <td width="27%">
                    @obj.Email
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                       <a asp-asp-controller="User" asp-action="Edit" asp-route-id="@obj.Id"
                       class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                       <a asp-asp-controller="User" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
